.container
	.row
		.page-header.clearfix
			h1=title
			.col-md-4
				small Big agricultural data
.navbar.navbar-default.navbar-fixed-bottom
	.container
		.navbar-header
			a.navbar-brand(href='/') 农业大数据
		if userInfo.username
			p.navbar-text.navbar-right#true
				span 欢迎您，#{userInfo.username} 
				span &nbsp;|&nbsp;
				a.navbar-link(href='/user/logout') 退出
		else
			p.navbar-text.navbar-right#false
				a.navbar-link(href='#',data-toggle="modal",data-target="#signupModal") 注册
				span &nbsp;|&nbsp;
				a.navbar-link(href='#',data-toggle="modal",data-target="#signinModal") 登录
#signupModal.modal.fade
	.modal-dialog
		.modal-content
			#registerBox
				.modal-header 注册
				.modal-body
					.form-group
						label(for="signupName") 用户名
						input#signupModal.form-control(name="username",type="text")
						label(for="signupPassword") 密码
						input#signupModal.form-control(name="password",type="text")
				.modal-footer
					.message
					button.btn.btn-default(typr="button",data-dismiss="modal") 关闭
					button.btn.btn-success 提交
#signinModal.modal.fade
	.modal-dialog
		.modal-content
			#loginBox
				.modal-header 登录
				.modal-body
					.form-group
						label(for="signinName") 用户名
						input#signinModal.form-control(name="username",type="text")
						label(for="signinPassword") 密码
						input#signinModal.form-control(name="password",type="text")
				.modal-footer
					.message
					button.btn.btn-default(typr="button",data-dismiss="modal") 关闭
					button.btn.btn-success 提交
	script(src="/static/js/page/admin/index.js")